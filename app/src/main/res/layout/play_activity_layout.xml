<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icn_telefone"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_phone" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icn_50_50"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_50_50" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icn_publico"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_people" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/level"
            android:alpha="0.9"
            android:id="@+id/tv_level"
            android:gravity="center"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:alpha="0.8"
            android:id="@+id/tv_question"
            android:textStyle="bold"
            android:textColor="#00EE00"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/clock"
            android:id="@+id/tv_clock"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="30"
            android:layout_marginTop="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_caseA"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/answer"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_caseB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/answer"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_caseC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/answer"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_caseD"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/answer"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>